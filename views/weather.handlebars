<html>
	<head>
		<title></title>
		<style type="text/css">
			html, body {
				height: 100%%;
				margin: 0;
			}
			#mainbody {
				display: flex;
				justify-content: center;
				flex-direction: column;
				width: 100%;
				height: 100%;
				background-color: white;
			}
			#weathericon {
				align-self: center;
				background-color: white;
				width: 50px;
				height: 50px;
				margin: 5px;
			}
			#textbox {
				align-self: center;
				text-align: center;
				width:70%;
				padding: 20px;
				background-color: white;
				margin: 10px;
			}
			#creditbox {
				align-self: center;
				text-align: center;
				width: auto;
				height: auto;
				padding: 10px;
				background-color: white;
				margin: 20px;
			}
		</style>
		<link href="/public/css/owfont-regular.css" rel="stylesheet" type="text/css">
	</head>
	<body>
		<div id="mainbody">
			<img id="weathericon" src="http://openweathermap.org/img/w/{{{icon}}}.png">
			</img>
			<div id="textbox">
				{{{weather}}}	
			</div>
			<div id="creditbox">
				{{{credit}}}
			</div>
		</div>
	</body>
</html>